<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:paddingBottom="10dp"
    android:layout_height="265dp">

   <android.support.v7.widget.CardView
       android:layout_width="250dp"
       app:cardElevation="10dp"
       android:id="@+id/Container"
       android:layout_height="250dp">

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="match_parent">

           <ImageView
               android:orientation="vertical"
               android:id="@+id/ProductImage"
               android:src="@drawable/broken_image"
               android:layout_margin="10dp"
               android:layout_width="match_parent"
               android:layout_height="200dp">


           </ImageView>

           <TextView
               android:layout_width="match_parent"
               android:id="@+id/ItemDescription"
               android:layout_height="match_parent" />

       </LinearLayout>



   </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/PriceItem"
            android:layout_height="wrap_content" />
        <Button
            android:text="Buy"
            android:id="@+id/BUY_ITEM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="match_parent"
            android:text="ADD TO CART"
            android:id="@+id/add_to_cart"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/COLOR_1"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:src="@color/colorPrimary"
                android:layout_height="30dp" />

            <ImageView
                android:src="@color/cardview_light_background"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <ImageView
                android:src="@color/InputTextColor"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <ImageView
                android:src="@color/HintColor"
                android:layout_width="30dp"
                android:layout_height="30dp" />

        </LinearLayout>
        <TextView
            android:id="@+id/COLOR_2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:text="Colors Available"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>