<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:gravity="bottom|right"
    android:orientation="horizontal"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:weightSum="1">


    <TextView
        android:gravity="center|left"
        android:textSize="@dimen/nav_header_welcome_text"
        android:id="@+id/NAVIGATION_HEADER_LOGGED_USER"
        android:layout_width="@dimen/nav_header_welcome_icon"
        android:layout_height="@dimen/nav_header_welcome_icon"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Hello"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_weight="0.90" />
    <ImageView
        android:id="@+id/imageView"
        android:scaleType="fitXY"
        android:layout_width="@dimen/nav_header_welcome_icon"
        android:layout_height="@dimen/nav_header_welcome_icon"
        app:srcCompat="@mipmap/ic_launcher_1" />
</LinearLayout>
