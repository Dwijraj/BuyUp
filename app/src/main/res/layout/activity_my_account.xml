<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/LOGIN_ROOT_VIEW"
    android:padding="4dp"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.softwaresolutions.buyup.UI.MyAccount">


    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:gravity="center"
            android:layout_weight="10"
            android:textSize="@dimen/login_text_size"
            android:text="Your Details will not be shared"
            android:textColor="@color/login_text_color"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="0dp" />


        <LinearLayout
            android:gravity="center"
            android:layout_weight="60"
            android:padding="10dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp">

            <ImageView
                android:focusable="true"
                android:layout_width="180dp"
                android:background="@drawable/welcome_notification"
                android:layout_height="180dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            android:layout_weight="4"/>

            <EditText

                android:background="@color/login_text_color"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Mobile Number"
                android:inputType="number"
                android:textColor="@color/colorPrimary"
                android:id="@+id/MY_ACCOUNT_MOBILE_NUMER"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/login_text_size" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            android:layout_weight="8"/>




            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Email"
                android:background="@color/login_text_color"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorPrimary"
                android:id="@+id/MY_ACCOUNT_EMAIL_ID"
                android:textColorHint="@color/colorPrimary"
                android:textSize="@dimen/login_text_size" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            android:layout_weight="6"/>

       <android.support.v7.widget.CardView
           app:cardElevation="10dp"
           android:background="@color/colorPrimary"
           android:id="@+id/MY_ACCOUNT_CARD_VIEW"
           android:layout_width="match_parent"
           android:layout_height="80dp">

           <Button
               android:text="CONFIRM CHANGESS"
               android:id="@+id/BUTTON"
               android:textColor="@color/login_text_color"
               android:background="@color/colorPrimary"
               android:layout_width="match_parent"
               android:layout_height="match_parent" />

       </android.support.v7.widget.CardView>

    </LinearLayout>


</LinearLayout>
